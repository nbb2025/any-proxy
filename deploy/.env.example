# Control plane listener inside the container
CONTROL_PLANE_LISTEN=:8080

# Exposed host port for the control plane API
CONTROL_PLANE_PORT=8080

# etcd connection (control plane will connect via docker network)
ETCD_ENDPOINTS=http://etcd:2379
ETCD_PREFIX=/any-proxy/

# PostgreSQL connection for management-plane data
PG_USER=anyproxy
PG_PASSWORD=anyproxy
PG_DATABASE=anyproxy
PG_PORT=5432
PG_DSN=postgres://anyproxy:anyproxy@postgres:5432/anyproxy?sslmode=disable
PG_MAX_IDLE=4
PG_MAX_OPEN=16
PG_CONN_MAX_LIFETIME=2h

# Optional: seed configuration JSON mounted via ./configs volume
# CONTROL_PLANE_SEED=/configs/bootstrap.example.json

# Optional: etcd mTLS paths (mounted under ./deploy/pki)
# ETCD_CERT=/app/pki/client/client.crt
# ETCD_KEY=/app/pki/client/client.key
# ETCD_CA=/app/pki/client/ca.crt
# ETCD_INSECURE_SKIP_VERIFY=true

# Frontend exposed host port
FRONTEND_PORT=3000

# Control plane URL exposed给前端 (默认侦听在宿主的8080端口)
FRONTEND_CONTROL_PLANE_URL=http://localhost:8080
# 前端容器内访问控制面的内部地址
FRONTEND_CONTROL_PLANE_INTERNAL_URL=http://control-plane:8080

# 控制面登录与令牌配置（请修改为安全值）
AUTH_USERNAME=admin
AUTH_PASSWORD=change-me
AUTH_JWT_SECRET=please-change-secret
AUTH_ACCESS_TOKEN_TTL=24h
AUTH_REFRESH_TOKEN_TTL=336h
